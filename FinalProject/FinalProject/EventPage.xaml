<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProject.EventPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Please enter the name of the event: " FontSize="20" TextColor="Black"/>
            <Entry Text="{Binding EntryEventName}" Placeholder="Event Name"/>
            <Label Text="Please enter the location: " FontSize="20" TextColor="Black"/>
            <Entry Text="{Binding EntryEventLocation}" Placeholder="Event Location"/>
            <Label Text="Please enter the event description: " FontSize="20" TextColor="Black"/>
            <Entry Text="{Binding EntryEventDescription}" Placeholder="Event Description"/>

            <Button Text="Ok"
                    Command="{Binding UpdateEventCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>